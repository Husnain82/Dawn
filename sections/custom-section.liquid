<section class="hello-world" id="hello-world-{{ section.id }}">
{% style %}
    #hello-world-{{ section.id }} {
        background-color: {{ section.settings.background_color }};
        text-align: {{ section.settings.alignment }};
        padding-top: {{ section.settings.padding_t }}px;
        padding-bottom: {{ section.settings.padding_b }}px;
    }

    {% for block in section.blocks %}
      {% if block.type == 'title' %}
        #hello-world-{{ section.id }} .title-{{ block.id }} {
        color: {{ block.settings.font-color }};
        background-color: {{ block.settings.b_color }};
        font-size: {{ block.settings.title_font_size }}px;
        text-transform:{{ block.settings.transform_1 }};
        margin: 0px;
        padding-top: {{ block.settings.padding_tt }}px;
        padding-bottom: {{ block.settings.padding_bt }}px;
        font-family: {{ block.settings.title-font }};
        }
      {% elsif block.type == "subtitle" %}
        #hello-world-{{ section.id }} .subtitle-{{ block.id }} {
        color: {{ block.settings.font_2 }};
        background-color: {{ block.settings.b_color2 }};
        font-size: {{ block.settings.subtitle_font_size }}px;
        text-transform:{{ block.settings.transform }};
        padding-top: {{ block.settings.padding_tst }}px;
        padding-bottom: {{ block.settings.padding_bst }}px;
        margin: 0px;
        }
        {% endif %}
    {% endfor %}
{% endstyle %}

    {%- for block in section.blocks -%}
    {%- case block.type -%}
        {%- when 'title' -%}
            <h2 class="title-{{ block.id }}">{{ block.settings.text_1 }}</h2>
        {%- when 'subtitle' -%}
            <h4 class="subtitle-{{ block.id }}">{{ block.settings.text_2 }}</h4>
    {%- endcase -%}
{%- endfor -%}
</section>

{% schema %}
