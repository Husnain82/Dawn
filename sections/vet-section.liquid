
{%  style  %}
.vet-approved-section {
  padding: 20px;
}

.vet-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  max-width: 420px;
  margin: 0 auto;
}

.vet-image-wrapper {
  position: relative;
  width: 100%;
}

.vet-main-image {
  width: 100%;
  height: auto;
  border-radius: 12px;
}

.vet-badge {
  position: absolute;
  width: 70px;
  height: 70px;
}

.vet-badge.top-left { top: 10px; left: 10px; }
.vet-badge.top-right { top: 10px; right: 10px; }
.vet-badge.bottom-left { bottom: 10px; left: 10px; }
.vet-badge.bottom-right { bottom: 10px; right: 10px; }

.vet-content {
  padding: 20px 15px 30px;
}

.vet-doctor {
  color: #f4a300;
  font-weight: 600;
  margin-bottom: 5px;
}

.vet-headline {
  font-size: 1.4rem;
  font-weight: 700;
  margin-bottom: 10px;
}

.vet-body {
  color: #555;
  font-size: 0.95rem;
  line-height: 1.5;
  margin-bottom: 20px;
}

.vet-button {
  background-color: #000;
  color: #fff;
  text-decoration: none;
  padding: 10px 22px;
  border-radius: 6px;
  font-weight: 600;
  display: inline-block;
  transition: background 0.3s;
}

.vet-button:hover {
  background-color: #333;
}

/* Desktop Layout */
@media (min-width: 768px) {
  .vet-card {
    flex-direction: row;
    text-align: left;
    max-width: 900px;
  }

  .vet-image-wrapper {
    flex: 1;
  }

  .vet-content {
    flex: 1;
    padding: 40px;
  }

  .vet-headline {
    font-size: 1.8rem;
  }
}
{% endstyle %}

<section class="vet-approved-section">
  <div class="vet-card">
    <div class="vet-image-wrapper">
{% if section.settings.main_image %}
  <img src="{{ section.settings.main_image | image_url: width: 600 }}" alt="Veterinarian image" class="vet-main-image" width="600" height="auto" loading="lazy">
{% endif %}

{% if section.settings.badge_image %}
  <img src="{{ section.settings.badge_image | image_url: width: 100 }}" alt="Badge" class="vet-badge {{ section.settings.badge_position }}" width="auto" height="auto" loading="lazy">
{% endif %}

    </div>

    <div class="vet-content">
      {% if section.settings.doctor_name != blank %}
        <h2 class="vet-doctor">{{ section.settings.doctor_name }}</h2>
      {% endif %}

      {% if section.settings.headline != blank %}
        <h3 class="vet-headline">{{ section.settings.headline }}</h3>
      {% endif %}

      {% if section.settings.body_text != blank %}
        <p class="vet-body">{{ section.settings.body_text }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="vet-button">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Veterinarian Approved",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image"
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Badge Placement",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "top-left"
    },
    {
      "type": "text",
      "id": "doctor_name",
      "label": "Doctor's Name",
      "default": "Dr. Ernie Sanderson"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Veterinarian-Approved"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "All products from Dr. Ernieâ€™s are vetted and approved by a qualified veterinarian, ensuring top-quality care for your pet."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View Products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Veterinarian Approved Section"
    }
  ]
}
{% endschema %}